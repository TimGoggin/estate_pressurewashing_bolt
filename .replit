run = "npm run dev"
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"
packages = ["lsof"]

[[ports]]
localPort = 5001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 3000

[deployment]
run = ["sh", "-c", "npm run build"]

[[deployment.responseHeaders]]
path = "/sitemap.xml"
name = "Content-Type"
value = "application/xml"

[[deployment.rewrites]]
from = "/sitemap.xml"
to = "/sitemap.xml"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40228902
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000"